# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /api/v0.1/users                 it.dvault.controllers.api.zerodotone.Users.index
POST    /api/v0.1/users                 it.dvault.controllers.api.zerodotone.Users.create
GET     /api/v0.1/users/:id             it.dvault.controllers.api.zerodotone.Users.get(id: Int)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
